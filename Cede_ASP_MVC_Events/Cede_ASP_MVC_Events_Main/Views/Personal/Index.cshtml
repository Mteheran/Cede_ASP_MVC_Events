@model List<Cede_ASP_MVC_Events_Main.Models.Personal>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Crear Nuevo Personal", "Create")
</p>

@Html.ValidationSummary()

<table class=" table">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Apellido
        </th>
        <th>
            Telefono 1
        </th>
        <th>
            Telefono 2
        </th>
        <th>
            Correo
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.PersonalId }) |
                <button onclick="confirmDelete('@item.PersonalId')">Eliminar</button>
                @*@Html.ActionLink("Details", "Details", new { id = item.Id_Empleado }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id_Empleado })*@
            </td>
        </tr>
    }

</table>
@section Scripts {
    <script>
        function confirmDelete(id) {
            var result = confirm("¿Esta seguro que desea eliminar el registro?");

            if (result) {
                $.ajax({
                    type: "POST",
                    url: "/Personal/Delete/" + id,
                    data: '{id:"00000000-0000 - 0000 - 0000 - 000000000001"}',
                    success: location.reload(),
                });
            }
        }
    </script>
}